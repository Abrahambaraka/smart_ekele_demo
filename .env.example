# Variables d'environnement pour Smart Ekele

# Base de donn√©es MySQL
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=votre_mot_de_passe
DB_NAME=smart_ekele_db

# Configuration du serveur
PORT=3000
NODE_ENV=development

# JWT pour l'authentification
JWT_SECRET=votre_secret_jwt_tres_securise_ici
JWT_EXPIRES_IN=7d

# URL de l'application
APP_URL=http://localhost:3000
API_URL=http://localhost:3000/api

# Configuration email (pour les notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=votre_email@gmail.com
SMTP_PASSWORD=votre_mot_de_passe_app
SMTP_FROM=Smart Ekele <noreply@smartekele.cd>

# Configuration SMS (optionnel - pour notifications SMS)
SMS_API_KEY=votre_cle_api_sms
SMS_SENDER_ID=SMARTEKELE

# Upload de fichiers
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Configuration Mobile Money (pour les paiements)
MOBILE_MONEY_API_KEY=votre_cle_api
MOBILE_MONEY_API_SECRET=votre_secret_api
MOBILE_MONEY_MERCHANT_ID=votre_merchant_id

# Autres
BCRYPT_ROUNDS=10
SESSION_SECRET=votre_secret_session_tres_securise
CORS_ORIGIN=http://localhost:5173

# Logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log
